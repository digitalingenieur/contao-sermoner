{
    "name":"digitalingenieur/sermoner-bundle",
	"description":"A administration tool to manage audio files of sermons, workshops, seminars, etc.",
	"license":"LGPL-3.0+",
	"keywords": ["contao","sermon"],
	"authors":[
		{
			"name":"Samuel Heer",
			"email":"samuel.heer@diging.de"
		}
	],
	"support":{
		"issues":"https://github.com/samheer/sermoner/issues"
		},
    "require": {
    	"php":">=5.3",
    	"contao/core-bundle":"~3.2 || ~4.1",
        "contao-community-alliance/composer-plugin":"~2.4 || ~3.0"
    },
    "autoload":{
        "classmap":["src/"],
        "psr-4": {
            "Diging\\SermonerBundle\\": "src/"
        }
    },
    "extra":{
        "contao":{
            "sources":{
                "":"system/modules/sermoner"
            },
        "runonce":[
            "runonce/runonce.php"
            ]
        }
    }
}